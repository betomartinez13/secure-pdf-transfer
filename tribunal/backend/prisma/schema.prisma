datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Case {
  id            Int      @id @default(autoincrement())
  caseName      String
  fileName      String
  encryptedFile Bytes
  encryptedKey  String
  iv            String
  authTag       String
  hash          String
  receivedAt    DateTime @default(now())
}

model AuthorizedKey {
  id         Int      @id @default(autoincrement())
  keyId      String   @unique
  publicKey  String   @db.Text
  deviceName String
  ownerEmail String?
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
